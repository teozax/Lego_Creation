task main()
{
   SetSensorTouch(IN_1);
   ClearScreen();
   while(1){
      until(Sensor(IN_1)==1)
      ClearScreen();
      OnFwd(OUT_B,30);
      TextOut(15,35,"Motor is Moving");
      until(Sensor(IN_1)==0)
      ClearScreen();
      Off(OUT_B);
      TextOut(15,35,"Motor is not Moving");
   }
     
}



